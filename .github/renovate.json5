{
  "enabled": true,
  "timezone": "Europe/Stockholm",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "assignees": ["@ahinko"],
  "semanticCommits": true,
  "packageRules": [
    {
      "datasources": ["docker"],
      "enabled": true,
      "updateTypes": ["major", "minor", "patch"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["renovate/image-release", "dependency/minor", "patch"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["renovate/image-release", "dependency/patch", "patch"]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T([0-9-]*)Z$",
      "matchPackageNames": [
        "quay.io/minio/mc"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(?<major>\\d{2}).(?<minor>\\d{1,2})-(?<compatibility>.*)$",
      "matchPackageNames": [
        "postgres"
      ]
    },
  ]
}
